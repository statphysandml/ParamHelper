@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Handle nlohmann_json dependency - only if we didn't export our own wrapper
if(@PARAMHELPER_USE_SYSTEM_JSON@ AND NOT @EXPORT_JSON_TARGET@)
    find_dependency(nlohmann_json REQUIRED)
endif()

# Include the exported targets
include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")

# Provide compatibility with older FindPackage behavior
set(paramhelper_FOUND TRUE)
set(paramhelper_VERSION @PROJECT_VERSION@)
set(paramhelper_INCLUDE_DIRS "${CMAKE_CURRENT_LIST_DIR}/../../../include")

message(STATUS "Found @PROJECT_NAME@ @PROJECT_VERSION@")